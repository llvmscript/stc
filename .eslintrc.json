{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "project": ["./tsconfig.json"] },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "prefer-arrow-callback": "warn",
    "prefer-const": "warn",
    "no-empty": "off",
    "@typescript-eslint/no-empty-function": "off"
  },
  "ignorePatterns": ["test"]
}
